<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvJobItem"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/space_0"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginBottom="@dimen/space_15"
            android:foregroundTint="@color/white">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/space_16"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/iv_user"
                        android:layout_width="@dimen/space_50"
                        android:layout_height="@dimen/space_50"
                        android:src="@drawable/selector_user"
                        tools:ignore="ContentDescription"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_user_name"
                            style="@style/TextViewStyle.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_right_arrow"
                            android:gravity="center_vertical"
                            tools:text="Charlize Theron"
                            android:textSize="@dimen/font_normal"
                            tools:title="@tools:sample/full_names"/>

                    <TextView
                            android:id="@+id/tv_city"
                            style="@style/TextViewStyle.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            tools:text="Ahmedabad"
                            android:textColor="@color/grey_medium_extra"
                            android:textSize="@dimen/font_medium"
                            tools:title="@tools:sample/full_names"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/space_8"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/tv_date"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/ic_calendar"
                                android:drawablePadding="@dimen/space_6"
                                android:gravity="center|start"
                                tools:text="Feb 18, 2019"
                                android:textColor="@color/grey_medium_extra"
                                android:textSize="@dimen/font_medium"
                                tools:title="@tools:sample/date/ddmmyy"/>

                        <TextView
                                android:id="@+id/tv_time"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/space_25"
                                android:drawableStart="@drawable/ic_access_time"
                                android:drawablePadding="@dimen/space_6"
                                android:gravity="center|start"
                                tools:text="16:30"
                                android:textColor="@color/grey_medium_extra"
                                android:textSize="@dimen/font_medium"
                                tools:title="@tools:sample/date/ddmmyy"/>
                    </LinearLayout>

                    <TextView
                            android:id="@+id/tv_service"
                            style="@style/TextViewStyle.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/space_12"
                            android:background="@drawable/bg_star"
                            android:textSize="@dimen/font_medium"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/space_8"
                            android:paddingEnd="@dimen/space_8"
                            android:paddingTop="@dimen/space_5"
                            android:paddingBottom="@dimen/space_5"
                            tools:text="Ac Repair"
                            android:textColor="@color/dark_grey"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llEndTimeBg"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:background="@color/pink_light"
                    android:padding="@dimen/space_10"
                    android:layout_height="wrap_content">

                <TextView
                        style="@style/TextViewStyle.Regular"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_medium"
                        android:text="@string/text_end_time"/>

                <TextView
                        android:id="@+id/tv_request_end_time"
                        style="@style/TextViewStyle.Medium"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/space_8"
                        android:textSize="@dimen/font_medium"
                        tools:text="01:30:45"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
