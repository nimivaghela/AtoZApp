<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="imageUrl" type="String"/>
    </data>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvUploadPicBg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/grey_light"
            android:elevation="@dimen/space_2"
            android:layout_marginStart="@dimen/space_2"
            android:layout_marginEnd="@dimen/space_2"
            android:focusable="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="@dimen/space_2">

        <ImageButton
                android:id="@+id/ibUploadButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:scaleType="center"
                android:tint="@color/grey"
                android:background="@drawable/bg_upload_image"
                tools:ignore="ContentDescription"/>
    </com.google.android.material.card.MaterialCardView>
</layout>