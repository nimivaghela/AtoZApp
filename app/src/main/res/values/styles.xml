<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CropTheme" parent="@style/Base.Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="splashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">@dimen/font_medium_extra</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/space_24</item>
        <item name="android:layout_marginEnd">@dimen/space_24</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="ButtonStyle.Medium">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="ButtonStyle.Medium.Icon" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextViewStyle.Bold">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TextViewStyle.Regular">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextViewStyle.Medium">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="TextViewStyle.Proxima">
        <item name="android:fontFamily">@font/proximanova_regular</item>
    </style>

    <style name="TextViewStyle.Proxima.Bold">
        <item name="android:fontFamily">@font/proximanova_bold</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="textInputLayoutBoxStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/pink_light</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="EditTextStyle.Medium">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="EditTextStyle.VerificationField">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:padding">@dimen/space_16</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="TextViewStyle.Setting" parent="TextViewStyle.Regular">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:paddingTop">@dimen/space_24</item>
        <item name="android:paddingBottom">@dimen/space_24</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="userProfileTitle" parent="TextViewStyle.Regular">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:layout_marginLeft">@dimen/space_16</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginRight">@dimen/space_16</item>
        <item name="android:drawablePadding">@dimen/space_15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="userProfileValue" parent="TextViewStyle.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:layout_marginStart">54dp</item>
        <item name="android:layout_marginTop">@dimen/space_10</item>
        <item name="android:layout_marginEnd">@dimen/space_16</item>
    </style>

    <!--chip-->
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:backgroundTint">@color/selector_chip_background</item>
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@android:color/white</item>
    </style>
</resources>
